datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id
  name      String
  username  String   @unique
  email     String   @unique
  password  String
  role      UserRole
  createdAt DateTime
  updatedAt DateTime @updatedAt
  courses     Course[] @relation("CourseAccess")
}

enum UserRole {
  PROFESSOR 
  STUDENTS
  ADMINISTRATOR
}

model Course {
 id          String   @id 
 name        String
 description String
 banner      String
 createdAt   DateTime 
 updatedAt   DateTime @updatedAt
 users       User[]   @relation("CourseAccess")
}